{
  "name": "@carry0987/plugin-manager",
  "version": "1.0.0",
  "description": "The `PluginManager` class provides utility functions for managing file operations, including cleaning directories, copying distribution folders, moving files, clearing unnecessary files, and removing empty directories in a file system.",
  "type": "module",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "rollup --config rollup.config.ts --configPlugin typescript",
    "build": "rollup --config rollup.config.ts --configPlugin typescript --environment BUILD:production",
    "clean": "pnpm clean",
    "clean:node_modules": "pnpm clean node_modules"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carry0987/PluginManager-JS.git"
  },
  "keywords": [
    "plugin",
    "plugin-manager"
  ],
  "author": "carry0987",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carry0987/PluginManager-JS/issues"
  },
  "homepage": "https://github.com/carry0987/PluginManager-JS#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/micromatch": "^4.0.7",
    "@types/node": "^20.14.2",
    "glob": "^10.4.1",
    "micromatch": "^4.0.7",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.6.3",
    "tsx": "^4.15.0",
    "vitest": "^1.6.0"
  }
}
