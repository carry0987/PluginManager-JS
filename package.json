{
  "name": "@carry0987/plugin-manager",
  "version": "1.0.4",
  "description": "This class provides utility functions for managing file operations, including cleaning directories, copying distribution folders, moving files, clearing unnecessary files, and removing empty directories in a file system.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "main": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "rollup --config rollup.config.ts --configPlugin typescript",
    "build": "rollup --config rollup.config.ts --configPlugin typescript --environment BUILD:production",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "pnpm clean",
    "clean:node_modules": "pnpm clean node_modules"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carry0987/PluginManager-JS.git"
  },
  "keywords": [
    "plugin",
    "plugin-manager"
  ],
  "author": "carry0987",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carry0987/PluginManager-JS/issues"
  },
  "homepage": "https://github.com/carry0987/PluginManager-JS#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.7.7",
    "glob": "^11.0.0",
    "micromatch": "^4.0.8",
    "prettier": "^3.3.3",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-tsconfig-paths": "^1.5.2",
    "tslib": "^2.8.0",
    "tsx": "^4.19.1",
    "vitest": "^2.1.3"
  }
}
